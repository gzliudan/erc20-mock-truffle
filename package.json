    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "truffle": "^5.5.29",
    "truffle-plugin-verify": "^0.5.28"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.7.3"
  }
}
